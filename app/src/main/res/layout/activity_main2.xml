<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">
    <Button
            android:text="Total"
            android:layout_width="95"
            android:layout_height="50"
            android:id="@+id/buttonTotal"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textViewTotal" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Java
"
            android:layout_width="95"
            android:layout_height="50"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/editTextJava" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <TextView
            android:text="Database"
            android:layout_width="95"
            android:layout_height="50"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/editTextDatabase"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toTopOf="@+id/textView4"/>
    <TextView
            android:text="Network"
            android:layout_width="95"
            android:layout_height="50"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/editTextNetwork"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/buttonTotal"/>
    <EditText
            android:layout_width="200"
            android:layout_height="50"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextJava"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/editTextDatabase"/>
    <EditText
            android:layout_width="200"
            android:layout_height="50"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextDatabase"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextJava"
            app:layout_constraintBottom_toTopOf="@+id/editTextNetwork"/>
    <EditText
            android:layout_width="200"
            android:layout_height="50"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNetwork"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDatabase"
            app:layout_constraintBottom_toTopOf="@+id/textViewTotal"/>
    <Button
            android:text="Avarege"
            android:layout_width="95"
            android:layout_height="50"
            android:id="@+id/buttonAvarage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textViewAve" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonTotal"/>
    <Button
            android:text="@string/Go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.442" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/buttonAvarage"/>
    <TextView
            android:layout_width="200"
            android:layout_height="50"
            android:id="@+id/textViewTotal"
            app:layout_constraintStart_toEndOf="@+id/buttonTotal" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.541"/>
    <TextView
            android:layout_width="200"
            android:layout_height="50"
            android:id="@+id/textViewAve"
            app:layout_constraintStart_toEndOf="@+id/buttonAvarage" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTotal"/>
</android.support.constraint.ConstraintLayout>
